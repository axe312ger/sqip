{
  "name": "sqip-monorepo",
  "private": true,
  "scripts": {
    "prepare": "lerna run prepare",
    "build": "lerna exec --parallel 'babel --root-mode upward src --out-dir dist --delete-dir-on-start'",
    "build:watch": "lerna exec --parallel 'babel --root-mode upward src --out-dir dist --delete-dir-on-start --watch --verbose'",
    "test": "npm run lint && npm run test:unit && npm run test:e2e",
    "test:unit": "jest --testPathPattern='unit/*' --coverage",
    "test:unit:watch": "jest --testPathPattern='unit/*' --coverage --watch",
    "pretest:e2e": "npm run build",
    "test:e2e": "TERM=xterm jest --testPathPattern='e2e/*'",
    "test:e2e:watch": "TERM=xterm jest --testPathPattern='e2e/*' --watch",
    "lint": "eslint packages/*/src",
    "format": "lerna exec 'prettier --write src/**/*.js __tests__/**/*.js'"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "codecov": "^3.5.0",
    "core-js": "^3.1.3",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.0.1",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lerna": "^3.14.1",
    "prettier": "^1.17.1"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "packages/*/src/**/*.js"
    ],
    "coverageDirectory": "./coverage/",
    "transformIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
