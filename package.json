{
  "name": "sqip-monorepo",
  "private": true,
  "scripts": {
    "prepare": "lerna run prepare",
    "build": "lerna exec --parallel 'babel --root-mode upward src --out-dir dist --delete-dir-on-start'",
    "build:watch": "lerna exec --parallel 'babel --root-mode upward src --out-dir dist --delete-dir-on-start --watch'",
    "test": "npm run lint && npm run test:unit && npm run test:e2e",
    "test:unit": "jest --testPathPattern='unit/*' --coverage",
    "test:unit:watch": "jest --testPathPattern='unit/*' --coverage --watch",
    "pretest:e2e": "npm run build",
    "test:e2e": "jest --testPathPattern='e2e/*'",
    "test:e2e:watch": "jest --testPathPattern='e2e/*' --watch",
    "dev": "npm run build -- --watch",
    "lint": "eslint packages/*/src",
    "precommit": "npm run lint",
    "prepush": "npm run test"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "assertion-error": "^1.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.7.1",
    "babel-plugin-add-module-exports": "^1.0.0",
    "codecov": "^3.1.0",
    "core-js": "^3.0.1",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-prettier-standard": "^2.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lerna": "^3.13.3",
    "nixt": "^0.5.1",
    "prettier": "^1.16.2"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "packages/*/src/**/*.js"
    ],
    "coverageDirectory": "./coverage/",
    "transformIgnorePatterns": [
      "/dist/"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
